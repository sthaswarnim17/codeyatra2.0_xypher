    {
      "concept_id": "work_energy_power",
      "title": "Work Done Pulling a Crate",
      "text": "A crate is pulled 8 m along a floor by a 50 N force at 60° to the horizontal. Find the work done.",
      "difficulty": "medium",
      "checkpoints": [
        {
          "question": "Which component of force does work along the displacement?",
          "type": "multiple_choice",
          "unit": "",
          "hint_on_first_wrong": "Work = F × d × cos(θ). Only the horizontal component contributes.",
          "choices": [
            { "value": "Vertical component (F sin θ)", "is_correct": false },
            { "value": "Horizontal component (F cos θ)", "is_correct": true },
            { "value": "The full 50 N", "is_correct": false },
            { "value": "Normal force", "is_correct": false }
          ],
          "error_patterns": [
            { "wrong_choice": "Vertical component (F sin θ)", "diagnosis": "The vertical component is perpendicular to the displacement and does zero work.", "missing_concept_id": "vector_decomposition" }
          ]
        },
        {
          "question": "Calculate the work done. W = F d cos(60°) = 50 × 8 × 0.5",
          "type": "multiple_choice",
          "unit": "J",
          "hint_on_first_wrong": "cos(60°) = 0.5, so W = 50 × 8 × 0.5 = 200 J",
          "choices": [
            { "value": "400 J", "is_correct": false },
            { "value": "200 J", "is_correct": true },
            { "value": "346 J", "is_correct": false },
            { "value": "100 J", "is_correct": false }
          ],
          "error_patterns": [
            { "wrong_choice": "400 J", "diagnosis": "You forgot to apply cos(60°). Work = F × d × cos θ, not just F × d.", "missing_concept_id": "trigonometry" },
            { "wrong_choice": "346 J", "diagnosis": "You used sin(60°) instead of cos(60°). For work along displacement, use cosine.", "missing_concept_id": "trigonometry" }
          ]
        }
      ]
    },
    {
