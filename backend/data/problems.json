    {
      "concept_id": "newtons_laws",
      "title": "Box on a Frictionless Surface",
      "text": "A 5 kg box sits on a frictionless horizontal surface. A horizontal force of 20 N is applied. Find the acceleration.",
      "difficulty": "easy",
      "checkpoints": [
        {
          "question": "Which law of Newton applies directly here?",
          "type": "multiple_choice",
          "unit": "",
          "hint_on_first_wrong": "Think about the relationship between force, mass and acceleration.",
          "choices": [
            { "value": "First Law", "is_correct": false },
            { "value": "Second Law (F = ma)", "is_correct": true },
            { "value": "Third Law", "is_correct": false },
            { "value": "Law of Gravitation", "is_correct": false }
          ],
          "error_patterns": [
            { "wrong_choice": "First Law", "diagnosis": "The first law describes objects at rest or constant velocity. Here a net force causes acceleration.", "missing_concept_id": "" },
            { "wrong_choice": "Third Law", "diagnosis": "The third law is about action-reaction pairs, not a single force on one body.", "missing_concept_id": "" }
          ]
        },
        {
          "question": "What is the acceleration of the box? (a = F / m)",
          "type": "multiple_choice",
          "unit": "m/s²",
          "hint_on_first_wrong": "a = F / m = 20 / 5",
          "choices": [
            { "value": "2 m/s²", "is_correct": false },
            { "value": "4 m/s²", "is_correct": true },
            { "value": "10 m/s²", "is_correct": false },
            { "value": "100 m/s²", "is_correct": false }
          ],
          "error_patterns": [
            { "wrong_choice": "100 m/s²", "diagnosis": "You multiplied F × m instead of dividing. Rearrange F = ma to get a = F / m.", "missing_concept_id": "basic_algebra" }
          ]
        }
      ]
    },
